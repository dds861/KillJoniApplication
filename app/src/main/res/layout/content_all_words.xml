<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="chats"
            type="com.chatserver.dd.chat.allwords.view.UsersAllWords" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/eventTimeChat"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:hint="time"
            android:text="@{chats.eventTime}"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/lastName"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="left"
            android:hint="time"
            android:text="@{chats.lastName}"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/eventTimeChat"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/message"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="time"
            android:text="@{chats.message}"
            android:textColor="@color/primary_text"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lastName"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/eventTimeChat"
            tools:layout_editor_absoluteX="0dp" />


    </android.support.constraint.ConstraintLayout>
</layout>