<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">


        <TextView
            android:id="@+id/tv_PlayerPid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:text="1"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/tv_PlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/tv_PlayerScore"
            android:layout_toRightOf="@id/tv_PlayerPid"
            android:text="kill_joni"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/tv_PlayerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/tv_PlayerTime"
            android:text="37"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/tv_PlayerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/checkBox_player_select"
            android:text="00:35:06"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/material_text_caption" />

        <CheckBox
            android:id="@+id/checkBox_player_select"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


</LinearLayout>