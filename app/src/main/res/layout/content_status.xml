<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Status:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Online:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerId:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerName:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerAddress:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Current Map:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Players Online:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerLocation:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerType:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerDateblock:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="ServerDaystoblock:"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />


            <TextView
                android:id="@+id/tv_serverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_serverPlayersOnline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/material_text_caption" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/material_text_caption" />
                <TextView
                    android:id="@+id/tv_serverMaxslots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/material_text_caption" />

            </LinearLayout>



            <TextView
                android:id="@+id/tv_serverLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverDateblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_serverDaystoblock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/material_text_caption" />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>