                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".allwords.view.ActivityAllWords"
            android:parentActivityName=".Mvp.View.Main2Activity"/>
        <activity
            android:name=".Server.View.ActivityServer"
            android:parentActivityName=".Mvp.View.Main2Activity"/>
        <activity
            android:name=".Vip.View.ActivityVip"
            android:parentActivityName=".Mvp.View.Main2Activity"/>
